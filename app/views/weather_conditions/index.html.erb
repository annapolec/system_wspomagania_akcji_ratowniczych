<p id="notice"><%= notice %></p>

<h1>Listing Weather Conditions</h1>

<table>
  <thead>
    <tr>
      <th>Float</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weather_conditions.each do |weather_condition| %>
      <tr>
        <td><%= weather_condition.float %></td>
        <td><%= link_to 'Show', weather_condition %></td>
        <td><%= link_to 'Edit', edit_weather_condition_path(weather_condition) %></td>
        <td><%= link_to 'Destroy', weather_condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

